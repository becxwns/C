if문
# include <stdio.h>
int main(void)
{
  int num = 3;

  if(num < 3)
    printf("num is smaller than 3!");
  if(num == 3)
    printf("num is 3!");
  if(num > 3)
    printf("num is bigger than 3!");

  return 0;
}

if, else, else if를 이용한 흐름의 분기
# include <stdio.h>

int main(void)
{
  char alpha = 'A';

  if(alpha == 'B')
    printf("alpha is B.");

  else 
    printf("alpha is not B.");

  return 0;
}

if~else if~else문 동작

# include <stdio.h>
int main(void)
{
	char alpha = 'C';

	if (alpha == 'A')
	{
		printf("alpha is A.\n");
		printf("I like apple.");
	}
	else if (alpha == 'B')
	{
		printf("alpha is B.\n");
		printf("I like banana.");
	}
	else if (alpha == 'C')
	{
		printf("alpha is C.\n");
		printf("I like carrot.");
	}
	else
	{
		printf("I hate fruit & vegetable.");
	}

	return 0;
}


