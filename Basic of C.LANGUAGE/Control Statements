if문
# include <stdio.h>
int main(void)
{
  int num = 3;

  if(num < 3)
    printf("num is smaller than 3!");
  if(num == 3)
    printf("num is 3!");
  if(num > 3)
    printf("num is bigger than 3!");

  return 0;
}

if, else, else if를 이용한 흐름의 분기
# include <stdio.h>

int main(void)
{
  char alpha = 'A'

  if(alpha == 'B');

  else 
  printf("alpha is not B.");

  return 0;
}

